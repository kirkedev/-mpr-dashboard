{
    "name": "api",
    "main": "index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "node --es-module-specifier-resolution=node --loader ts-node/esm --inspect=0.0.0.0 index.ts",
        "build": "docker build .. -f Dockerfile -t ${ECR_REGISTRY:-kirkedev}/mpr-api:$TAG",
        "publish": "docker push ${ECR_REGISTRY:-kirkedev}/mpr-api:$TAG",
        "healthy": "node healthcheck"
    },
    "dependencies": {
        "dotenv": "^10.0.0",
        "fastify": "^3.25.1",
        "lib": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^17.0.2",
        "esbuild": "^0.14.7",
        "nodemon": "^2.0.15",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "nodemonConfig": {
        "ext": "ts",
        "watch": [
            "./",
            "../lib"
        ],
        "exec": "yarn dev"
    }
}
