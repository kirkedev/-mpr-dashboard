{
    "name": "api",
    "main": "index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "node --es-module-specifier-resolution=node --loader ts-node/esm --inspect=0.0.0.0 index.ts",
        "build": "docker build .. -f Dockerfile -t mpr-dashboard/api:$(git describe --tags --dirty --always)",
        "healthy": "node healthcheck"
    },
    "dependencies": {
        "dotenv": "^10.0.0",
        "fastify": "^3.24.1",
        "lib": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^16.11.11",
        "esbuild": "^0.14.1",
        "nodemon": "^2.0.15",
        "ts-node": "^10.4.0",
        "typescript": "4.5.2"
    },
    "nodemonConfig": {
        "ext": "ts",
        "watch": [
            "./",
            "../lib"
        ],
        "exec": "yarn dev"
    }
}
