{
    "name": "api",
    "main": "index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "node --es-module-specifier-resolution=node --loader ts-node/esm --inspect=0.0.0.0 index.ts",
        "build": "TAG=$(git describe --tags --dirty --always); docker build .. -f Dockerfile -t mpr-dashboard/api:$TAG",
        "healthy": "node healthcheck"
    },
    "dependencies": {
        "dotenv": "^10.0.0",
        "fastify": "^3.22.0",
        "lib": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^16.11.1",
        "esbuild": "^0.13.8",
        "nodemon": "^2.0.13",
        "ts-node": "^10.3.0",
        "typescript": "4.4.4"
    },
    "nodemonConfig": {
        "ext": "ts",
        "watch": [
            "./",
            "../lib"
        ],
        "exec": "yarn dev"
    }
}
