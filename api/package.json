{
    "name": "api",
    "version": "0.3.0",
    "main": "index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "node --es-module-specifier-resolution=node --loader ts-node/esm --inspect=0.0.0.0 index.ts",
        "build": "docker buildx build .. -f Dockerfile -t ${ECR_REGISTRY:-kirkedev}/mpr-api:$TAG"
    },
    "dependencies": {
        "fastify": "^4.24.3",
        "lib": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^20.8.8",
        "esbuild": "^0.19.5",
        "nodemon": "^3.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "nodemonConfig": {
        "ext": "ts",
        "watch": [
            "./",
            "../lib"
        ],
        "exec": "yarn dev"
    }
}
