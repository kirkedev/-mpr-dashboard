{
    "name": "mpr-dashboard",
    "version": "0.1.0",
    "description": "Dashboard and analytics for USDA Mandatory Price Reporting",
    "author": "Andrew Kirkegaard",
    "license": "ISC",
    "private": true,
    "scripts": {
        "prepare": "husky install .githooks",
        "lint": "eslint . --ext .ts --fix",
        "clean": "tsc -b --clean",
        "watch": "tsc -b -w",
        "predev": "docker-compose down",
        "dev": "yarn predev & docker-compose up --build",
        "pretest": "docker-compose --file docker-compose.test.yaml down && docker-compose --file docker-compose.test.yaml build",
        "test": "yarn pretest && docker-compose --file docker-compose.test.yaml run --rm sut",
        "prestart": "yarn clean && docker-compose --file docker-compose.yaml down",
        "start": "docker stack deploy -c docker-compose.yaml",
        "postinstall": "husky install"
    },
    "workspaces": [
        "api",
        "app",
        "lib",
        "test"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "husky": "^7.0.0",
        "typescript": "^4.4.4"
    }
}
