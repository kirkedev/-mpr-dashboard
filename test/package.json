        "@types/node": "^20.6.4",
        "@types/resolve": "^1.20.2"
    },
    "dependencies": {
        "jest": "^29.7.0",
        "lib": "workspace:*",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2"
    }
